<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_add_mading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimary"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wikrama.masis.AddMading">

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:id="@+id/text1"
                app:mtf_image="@android:drawable/ic_menu_agenda"
                app:mtf_labelColor="@color/putih"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Judul Mading"
                    android:id="@+id/judul"
                    android:textSize="15sp"
                    android:textColorHint="@color/primaryText"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                android:id="@+id/text2"
                app:mtf_labelColor="@color/putih"
                android:layout_below="@+id/text1"
                app:mtf_image="@android:drawable/ic_menu_agenda"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Deskripsi"
                    android:textSize="15sp"
                    android:id="@+id/desc"
                    android:textColorHint="@color/putih"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

            <com.github.florent37.materialtextfield.MaterialTextField
                android:layout_width="match_parent"
                app:mtf_labelColor="@color/putih"
                android:id="@+id/text3"
                android:layout_below="@+id/text2"
                app:mtf_image="@android:drawable/ic_menu_gallery"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gambar Mading"
                    android:textSize="15sp"
                    android:id="@+id/gambar"
                    android:textColorHint="@color/putih"
                    />
            </com.github.florent37.materialtextfield.MaterialTextField>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Tambahkan"
        android:id="@+id/tambah"
        android:textColor="@color/putih"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text3"
        />

</RelativeLayout>
